<section>
	<div class="container-fluid">
		<div class="row e-form">
			<div class="col-md-offset-2 col-md-4 event-form">
				<%= form_for @event do |f| %>
					<h1 class="l-welcome">Create an Event!</h1>
					
					<div class="form-group">
					<%= f.text_field :title, placeholder: "Title", class: "form-control" %>
					</div>

					<div>
					<%= f.text_field :address, placeholder: "Full Address", class: "form-control"  %>
					</div>

					<div>
					<%= f.label :start_time %>
					<%= f.datetime_select :start_time %>
					</div>

					<div>
						<%= f.label :image, "Upload Image" %>
						<%= f.file_field :image %>
					</div>
					<br>
					<%= f.submit "Submit", class: "btn btn-success" %>

				
			</div>

			<div class="col-md-4">
				<div class="c-text">
					<%= f.text_area :description, placeholder: "About this event...", class: "form-control", :cols => 40, :rows => 8 %>
				</div>

					<% end %>
			</div>
		</div>
	</div>
</section>
