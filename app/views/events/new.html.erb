<section>
	<div class="container-fluid">
		<div class="row text-center e-form">
			<div class="col-md-12">
				<%= form_for @event do |f| %>

					<div>
					<%= f.label :title %>
					<%= f.text_field :title %>
					</div>

					<div>
					<%= f.label :description %>
					<%= f.text_area :description %>
					</div>

					<div>
					<%= f.label :start_time %>
					<%= f.datetime_select :start_time %>
					</div>

					<div>
						<%= f.label :image, "Upload Image" %>
						<%= f.file_field :image %>
					</div>

					<%= f.submit "Create Event!" %>


				<% end %>
			</div>
		</div>
	</div>
</section>
