<section class="new-a">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-offset-4 col-md-4">
				<h1>Upload Announcement</h1>

				<%= form_for @announcement do |f| %>

					<%= f.label :image, "Add Announcement" %>
